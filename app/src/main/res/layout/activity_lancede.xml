<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.malo.androiddev.LanceDeActivity">


    <TextView
        android:id="@+id/number_one"
        android:layout_width="@dimen/deSize"
        android:layout_height="@dimen/deSize"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="@dimen/deMargin"
        android:layout_marginStart="@dimen/deMargin"
        android:layout_marginTop="@dimen/deMargin"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/number"
        android:background="@color/deepBlue"
        android:textAlignment="center"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/number_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/number_two"
        android:layout_width="@dimen/deSize"
        android:layout_height="@dimen/deSize"
        android:layout_margin="@dimen/deMargin"
        android:text=""
        android:background="@color/deepBlue"
        android:textColor="@color/white"
        android:textSize="@dimen/number"
        android:textAlignment="center"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/number_three"
        android:layout_width="@dimen/deSize"
        android:layout_height="@dimen/deSize"
        android:layout_marginBottom="@dimen/deMargin"
        android:layout_marginEnd="@dimen/deMargin"
        android:layout_marginStart="@dimen/deMargin"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/number"
        android:background="@color/deepBlue"
        android:textAlignment="center"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_two"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/number_lol"
        android:layout_width="@dimen/deSize"
        android:layout_height="@dimen/deSize"
        android:layout_margin="@dimen/deMargin"
        android:text=""
        android:background="@color/deepBlue"
        android:textColor="@color/white"
        android:textSize="@dimen/number"
        android:textAlignment="center"
        android:gravity="center_vertical" />


</android.support.constraint.ConstraintLayout>
